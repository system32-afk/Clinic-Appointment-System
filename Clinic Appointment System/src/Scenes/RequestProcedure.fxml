<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.RequestProcedureController">
    <children>
        <VBox spacing="20" prefWidth="500" prefHeight="400" style="-fx-padding: 20;">
            <children>
                <Text text="Request Medical Procedure" style="-fx-font-size: 18; -fx-font-weight: bold;" />

                <GridPane hgap="10" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="120" />
                        <ColumnConstraints prefWidth="350" />
                    </columnConstraints>

                    <children>
                        <Text text="Appointment:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <ComboBox fx:id="appointmentCombo" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="300" />

                        <Text text="Service:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <ComboBox fx:id="serviceCombo" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="300" />

                        <Text text="Procedure Date:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <DatePicker fx:id="procedureDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="200" />
                    </children>
                </GridPane>

                <!-- Service Details Preview -->
                <VBox spacing="5" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 10;" visible="false" fx:id="serviceDetailsBox">
                    <children>
                        <Text text="Service Details" style="-fx-font-size: 14; -fx-font-weight: bold;" />
                        <HBox spacing="20">
                            <children>
                                <VBox spacing="2">
                                    <Text text="Service Name:" style="-fx-font-weight: bold;" />
                                    <Label fx:id="serviceNameLabel" />
                                </VBox>
                                <VBox spacing="2">
                                    <Text text="Price:" style="-fx-font-weight: bold;" />
                                    <Label fx:id="servicePriceLabel" style="-fx-text-fill: #40D0E0; -fx-font-weight: bold;" />
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <HBox spacing="15" alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="cancelButton" text="Cancel" onAction="#cancel"
                                style="-fx-background-color: white; -fx-border-color: gray; -fx-border-radius: 5;" />
                        <Button fx:id="requestButton" text="Request Procedure" onAction="#requestProcedure"
                                style="-fx-background-color: #40D0E0; -fx-text-fill: white; -fx-background-radius: 5;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
