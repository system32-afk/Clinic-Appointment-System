<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ViewMedicalHistoryController">
    <children>
        <ScrollPane layoutX="0.0" layoutY="0.0" prefHeight="500.0" prefWidth="600.0">
            <content>
                <VBox spacing="20" prefWidth="580" prefHeight="480" style="-fx-padding: 20;">
                    <children>
                        <Text text="Medical History Details" style="-fx-font-size: 18; -fx-font-weight: bold;" />

                        <GridPane hgap="10" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints prefWidth="150" />
                                <ColumnConstraints prefWidth="400" />
                            </columnConstraints>

                            <children>
                                <Text text="Patient:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                                <Label fx:id="patientLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                                <Text text="Blood Type:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                                <Label fx:id="bloodTypeLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                                <Text text="Height:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                                <Label fx:id="heightLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                                <Text text="Allergies:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                                <TextArea fx:id="allergiesArea" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="400" prefHeight="80"
                                          editable="false" style="-fx-background-color: #f5f5f5;" />

                                <Text text="Medical Conditions:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                                <TextArea fx:id="conditionsArea" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="400" prefHeight="80"
                                          editable="false" style="-fx-background-color: #f5f5f5;" />

                                <Text text="Past Surgeries:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                                <TextArea fx:id="pastSurgeriesArea" GridPane.rowIndex="5" GridPane.columnIndex="1" prefWidth="400" prefHeight="80"
                                          editable="false" style="-fx-background-color: #f5f5f5;" />
                            </children>
                        </GridPane>

                        <HBox spacing="15" alignment="CENTER_RIGHT">
                            <children>
                                <Button fx:id="closeButton" text="Close" onAction="#close"
                                        style="-fx-background-color: #40D0E0; -fx-text-fill: white; -fx-background-radius: 5;" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
