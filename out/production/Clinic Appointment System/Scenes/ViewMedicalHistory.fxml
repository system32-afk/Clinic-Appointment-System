<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ViewMedicalHistoryController">
    <children>
        <ScrollPane layoutX="0.0" layoutY="0.0" prefHeight="600.0" prefWidth="700.0">
            <content>
                <VBox spacing="20" prefWidth="680" prefHeight="580" style="-fx-padding: 20;">
                    <children>
                        <Text text="Complete Medical History" style="-fx-font-size: 18; -fx-font-weight: bold;" />

                        <VBox spacing="5" style="-fx-background-color: #e3f2fd; -fx-padding: 15; -fx-background-radius: 10;">
                            <Text text="Patient Information" style="-fx-font-size: 14; -fx-font-weight: bold;" />
                            <Label fx:id="patientLabel" style="-fx-font-size: 16; -fx-font-weight: bold;" />
                        </VBox>

                        <VBox spacing="15">
                            <Text text="Medical Records" style="-fx-font-size: 16; -fx-font-weight: bold;" />
                            <VBox fx:id="medicalHistoryContainer" spacing="15" prefWidth="650" />
                        </VBox>

                        <HBox spacing="15" alignment="CENTER_RIGHT">
                            <children>
                                <Button fx:id="closeButton" text="Close" onAction="#close"
                                        style="-fx-background-color: #40D0E0; -fx-text-fill: white; -fx-background-radius: 5;" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
