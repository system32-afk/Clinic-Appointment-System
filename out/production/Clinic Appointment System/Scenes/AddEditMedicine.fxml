<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AddEditMedicineController">
    <children>
        <VBox spacing="20" prefWidth="400" prefHeight="200" style="-fx-padding: 20;">
            <children>
                <Text fx:id="dialogTitle" text="Add New Medicine" style="-fx-font-size: 18; -fx-font-weight: bold;" />

                <GridPane hgap="10" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="120" />
                        <ColumnConstraints prefWidth="250" />
                    </columnConstraints>

                    <children>
                        <Text text="Medicine Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <TextField fx:id="medicineNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200" />
                    </children>
                </GridPane>

                <HBox spacing="15" alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="cancelButton" text="Cancel" onAction="#cancel"
                                style="-fx-background-color: white; -fx-border-color: gray; -fx-border-radius: 5;" />
                        <Button fx:id="saveButton" text="Save Medicine" onAction="#saveMedicine"
                                style="-fx-background-color: #40D0E0; -fx-text-fill: white; -fx-background-radius: 5;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
